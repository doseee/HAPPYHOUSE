<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.apt.model.mapper.AptLikeMapper">
	<resultMap type="aptLikeDto" id="aptLike">
		<result column="user_id" property="userId"/>
		<result column="like_no" property="likeNo"/>
		<result column="sidoName" property="sidoName"/>
		<result column="gugunName" property="gugunName"/>
		<result column="dongName" property="dongName"/>
		<result column="dongCode" property="dongCode"/>
	</resultMap>
	
	<insert id="addList" parameterType="aptLikeDto">
		insert into aptlike (user_id, sidoName, gugunName, dongName, dongCode)
		values (#{userId}, #{sidoName}, #{gugunName}, #{dongName}, #{dongCode})
		<selectKey resultType="int" keyProperty="likeNo" order="AFTER">
			select last_insert_id()
		</selectKey>
	</insert>
	
	<delete id="deleteList" parameterType="int">
		delete from aptlike
		where like_no = #{likeNo}
	</delete>
	
	<select id="getTotalCount" parameterType="map" resultType="int">
		select count(*)
		from aptlike
		where user_id = #{userId}
	</select>
	
	<select id="getList" parameterType="AptLikeDto" resultMap="aptLike">
		select * 
		from aptlike
		where user_id = #{userId}
	</select>
</mapper>